<%- include('partials/header') -%>

  <nav class="flex items-center justify-around flex-wrap bg-white p-6 shadow-md">
    <div class="flex items-center flex-shrink-0 text-gray-800 mr-6 cursor-pointer">
      <a class="toggleColour text-black no-underline hover:no-underline hover:text-green-700 font-bold text-2xl lg:text-4xl"
        href="/">
        Social Seed
      </a>
    </div>
    <div class="text-sm w-64 mr-32">
    </div>
    <div>
      <a href="/profile"><i class="far fa-user text-lg hover:text-green-700 cursor-pointer"> </i> Profile</a>
    </div>
  </nav>

  <div class="inline-flex rounded-md shadow-sm" role="group">
    <a href="/profile"><button type="button"
        class="py-2 px-4 text-sm font-medium text-gray-900 bg-white border-t border-b border-gray-200 hover:bg-gray-100 hover:text-green-700 focus:z-10 focus:ring-2 focus:ring-green-700 focus:text-green-700 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-green-500 dark:focus:text-white">
        Profile
      </button>
    </a>
    <a href="/feed"><button type="button"
        class="py-2 px-4 text-sm font-medium text-gray-900 bg-white border-t border-b border-gray-200 hover:bg-gray-100 hover:text-green-700 focus:z-10 focus:ring-2 focus:ring-green-700 focus:text-green-700 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-green-500 dark:focus:text-white">
        Feed
      </button>
    </a>
  </div>

  <div class="bg-green-700 min-h-screen flex pt-10">
    <div class="w-full">
      <h2 class="text-center text-white font-bold text-2xl uppercase mb-10">Feed</h2>
      <div class="bg-white p-5 rounded-lg shadow md:w-3/4 mx-auto lg:w-2/3">
        <div class="container mx-auto my-10 sm:px-20 flex flex-wrap justify-center">

          <% for(var i=0; i < posts.length; i++) {%>
            <!--  Post  -->
            <div
              class=" border-black border-4 m-5 ml-5 mr-5 rounded overflow-hidden w-full lg:w-5/12 md:w-6/12 sm:w-1/12 bg-white ">

              <a href="/post/<%= posts[i]._id%>">
                <img class="w-full bg-cover" src="<%= posts[i].image%>">
              </a>

              <div class="px-3 pb-2">
                <div class="pt-2">
                  <i class="far cursor-pointer hover:text-green-700">
                    <form class="" action="/post/likePost/<%= posts[i]._id%>?_method=PUT" method="POST">
                      <button class=" far fa-heart hover:text-green-700" type="submit"></button>
                    </form>
                  </i>
                  <span class="text-sm text-gray-400 font-medium">
                    <%= posts[i].likes%>
                  </span>
                </div>
                <div class="pt-1">
                  <div class="mb-2 text-sm">
                    <span class="font-medium mr-2">
                      <%= posts[i].user.userName %>
                    </span>
                    <b>
                      <%= posts[i].title %>
                    </b> <br>
                    <%= posts[i].caption%>
                  </div>
                </div>
                <div class="text-sm mb-2 text-gray-400 cursor-pointer hover:text-green-700 font-medium">
                  <a class='hover:text-green-700' href="/post/<%= posts[i]._id%>">
                    View all comments
                  </a>
                </div>
              </div>

            </div>


            <% } %>
        </div>
      </div>
    </div>
  </div>
  <%- include('partials/footer') -%>